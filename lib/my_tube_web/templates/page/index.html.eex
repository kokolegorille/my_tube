<h1><%= gettext("Events") %></h1>

<%= if length(@events) > 0 do %>
  <div class="card-columns">
    <%= for event <- @events do %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <%= 
            link gettext("Show"), 
            to: Routes.page_path(@conn, :show, event),
            class: "card-link"
          %>
        </div>
      </div>
    <% end %> 
  </div>
<% else %>
  <p><%= gettext("The list is empty") %></p>
<% end %>